<div class="product-card">
    <div class="product-image">
        <% if (product.image) { %>
            <img src="/uploads/<%= product.image %>" alt="<%= product.name %>">
        <% } else { %>
            <img src="/images/placeholder.jpg" alt="No Image Available">
        <% } %>
    </div>
    
    <div class="product-info">
        <h4 class="product-type"><%= product.type || 'Furniture' %></h4>
        <h3 class="product-name"><%= product.name %></h3>
        <p class="product-price">₦<%= product.price?.toLocaleString() || '0' %></p>
        
        <div class="product-actions">
            <a href="/products/<%= product._id %>" class="btn btn-view">View Details</a>
            <button class="btn btn-wishlist" data-id="<%= product._id %>">♡ Like</button>
        </div>
    </div>
</div>